<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/app_pref">

        <ListPreference
            app:defaultValue="@string/auto"
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_values"
            app:key="theme_mode"
            app:title="@string/night_mode"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="@string/english"
            app:entries="@array/language_entries"
            app:entryValues="@array/language_values"
            app:key="language"
            app:title="@string/language"
            app:useSimpleSummaryProvider="true" />

        <SeekBarPreference
            android:max="20"
            app:defaultValue="16"
            app:key="font_size"
            app:min="14"
            app:showSeekBarValue="true"
            app:summary="@string/font_size_msg"
            app:title="@string/font_size"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/shop_location">

        <ListPreference
            app:defaultValue="@string/normal"
            app:entries="@array/map_entries"
            app:entryValues="@array/map_value"
            app:key="map_type"
            app:title="@string/map_type_title"
            app:useSimpleSummaryProvider="true" />

        <SeekBarPreference
            android:max="20"
            app:defaultValue="16"
            app:key="font_size"
            app:min="6"
            app:showSeekBarValue="true"
            app:summary="@string/map_zoom_level"
            app:title="@string/map_z_level"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

</PreferenceScreen>